<VBox fx:id="mainVBox" fx:controller="com.bartoszkrych.Controller"
      prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1">
  <children>
      <HBox prefHeight="25.0" prefWidth="365.0">
         <children>
            <MenuBar>
              <menus>
                <Menu mnemonicParsing="false" text="Meals">
                  <items>
                    <MenuItem fx:id="addNewMeal" mnemonicParsing="false" text="Add..." onAction="#showNewMealDialog" />
                    <MenuItem fx:id="deleteMeal" mnemonicParsing="false" text="Delete..." />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Save">
                     <items>
                    <MenuItem fx:id="saveToTxt" mnemonicParsing="false" text="Save to txt" />
                     </items>
                </Menu>
              </menus>
            </MenuBar>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <cursor>
            <Cursor fx:constant="DEFAULT" />
         </cursor>
      </HBox>
    <SplitPane dividerPositions="0.5" focusTraversable="true" prefHeight="-1.0" prefWidth="-1.0" VBox.vgrow="ALWAYS">
      <items>
            <TableView prefHeight="200.0" prefWidth="200.0">
              <columns>
                  <TableColumn fx:id="numberMeal" prefWidth="35.0" text="Lp." />
                <TableColumn fx:id="commentMeal" prefWidth="95.0" text="Comment" />
                <TableColumn fx:id="proteinMeal" prefWidth="59.0" text="Protein" />
                  <TableColumn fx:id="carboMeal" prefWidth="98.0" text="Carbohydrates" />
                  <TableColumn fx:id="fatMeal" prefWidth="51.0" text="Fat" />
                  <TableColumn fx:id="kcalMeal" prefWidth="108.0" text="kcal" />
              </columns>
            </TableView>
        <AnchorPane>
               <children>
                <HBox id="HBox" alignment="CENTER_LEFT" spacing="5.0">
                  <children>
                    <Label maxHeight="1.7976931348623157E308" maxWidth="-1.0" prefHeight="16.0" prefWidth="42.0" text="Name" HBox.hgrow="ALWAYS">
                      <font>
                        <Font size="11.0" fx:id="x3" />
                      </font>
                      <textFill>
                        <Color blue="0.625" green="0.625" red="0.625" fx:id="x4" />
                      </textFill>
                    </Label>
                        <Label fx:id="yourName" maxHeight="1.7976931348623157E308" maxWidth="-1.0" prefHeight="16.0" prefWidth="72.0" text="&lt;name&gt;">
                           <font>
                              <Font size="11.0" fx:id="x33" />
                           </font>
                           <textFill>
                              <Color blue="0.625" green="0.625" red="0.625" fx:id="x43" />
                           </textFill>
                        </Label>
                    <Label font="$x3" maxWidth="-1.0" prefHeight="16.0" prefWidth="32.0" text="Age" textFill="$x4" HBox.hgrow="NEVER" />
                        <Label fx:id="yourAge" maxWidth="-1.0" prefHeight="16.0" prefWidth="37.0" text="&lt;age&gt;">
                           <font>
                              <Font size="11.0" fx:id="x34" />
                           </font>
                           <textFill>
                              <Color blue="0.625" green="0.625" red="0.625" fx:id="x44" />
                           </textFill>
                        </Label>
                        <Label maxHeight="1.7976931348623157E308" maxWidth="-1.0" prefHeight="16.0" prefWidth="41.0" text="Height">
                           <font>
                              <Font size="11.0" fx:id="x31" />
                           </font>
                           <textFill>
                              <Color blue="0.625" green="0.625" red="0.625" fx:id="x41" />
                           </textFill>
                        </Label>
                        <Label fx:id="yourHeight" maxHeight="1.7976931348623157E308" maxWidth="-1.0" prefHeight="16.0" prefWidth="50.0" text="&lt;height&gt;">
                           <font>
                              <Font size="11.0" fx:id="x311" />
                           </font>
                           <textFill>
                              <Color blue="0.625" green="0.625" red="0.625" fx:id="x411" />
                           </textFill>
                        </Label>
                        <Label maxHeight="1.7976931348623157E308" maxWidth="-1.0" prefHeight="16.0" prefWidth="44.0" text="Weight">
                           <font>
                              <Font size="11.0" fx:id="x32" />
                           </font>
                           <textFill>
                              <Color blue="0.625" green="0.625" red="0.625" fx:id="x42" />
                           </textFill>
                        </Label>
                        <Label fx:id="yourWeight" maxHeight="1.7976931348623157E308" maxWidth="-1.0" prefHeight="16.0" prefWidth="52.0" text="&lt;weight&gt;">
                           <font>
                              <Font size="11.0" fx:id="x321" />
                           </font>
                           <textFill>
                              <Color blue="0.625" green="0.625" red="0.625" fx:id="x421" />
                           </textFill>
                        </Label>
                  </children>
                  <padding>
                    <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
                  </padding>
                </HBox>
                  <GridPane layoutX="14.0" layoutY="48.0" prefHeight="72.0" prefWidth="346.0">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" maxWidth="115.0" minWidth="10.0" prefWidth="74.0" />
                      <ColumnConstraints hgrow="SOMETIMES" maxWidth="144.0" minWidth="0.0" prefWidth="27.0" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="310.0" minWidth="10.0" prefWidth="176.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Label fx:id="yourCPM" prefHeight="28.0" prefWidth="78.0" text="&lt;CPM&gt;">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                        <Label prefHeight="27.0" prefWidth="30.0" text="/" textAlignment="CENTER" GridPane.columnIndex="1">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                        <Label fx:id="yourEatenKcal" prefHeight="36.0" prefWidth="122.0" text="&lt;kcal&gt;" GridPane.columnIndex="2">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                     </children>
                  </GridPane>
                  <GridPane layoutX="15.0" layoutY="127.0" prefHeight="63.0" prefWidth="411.0">
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="115.0" minWidth="10.0" prefWidth="83.0" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="310.0" minWidth="10.0" prefWidth="192.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                     </rowConstraints>
                     <children>
                        <Label prefHeight="28.0" prefWidth="78.0" text="Opinion:">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                        <Label fx:id="commentObs" prefHeight="27.0" prefWidth="116.0" text="&lt;comment&gt;" GridPane.columnIndex="1">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                     </children>
                  </GridPane>
                  <Label layoutX="15.0" layoutY="224.0" prefHeight="49.0" prefWidth="323.0" text="Percent of nutritional values:">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <GridPane alignment="CENTER" layoutX="16.0" layoutY="284.0" prefHeight="123.0" prefWidth="198.0">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" maxWidth="107.0" minWidth="10.0" prefWidth="92.0" />
                      <ColumnConstraints hgrow="SOMETIMES" maxWidth="135.0" minWidth="10.0" prefWidth="134.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Label contentDisplay="CENTER" prefHeight="27.0" prefWidth="100.0" text="Protein:">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                        <Label contentDisplay="CENTER" prefHeight="27.0" prefWidth="94.0" text="Carbo:" textAlignment="CENTER" GridPane.rowIndex="1">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                        <Label contentDisplay="CENTER" prefHeight="27.0" prefWidth="60.0" text="Fat:" textAlignment="CENTER" GridPane.rowIndex="2">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                        <Label fx:id="proteinPercent" contentDisplay="CENTER" prefHeight="27.0" prefWidth="60.0" text="&lt;Pp&gt;" textAlignment="CENTER" GridPane.columnIndex="1">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                        <Label fx:id="carboPercent" contentDisplay="CENTER" prefHeight="27.0" prefWidth="60.0" text="&lt;Cp&gt;" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="1">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                        <Label fx:id="fatPercent" contentDisplay="CENTER" prefHeight="27.0" prefWidth="60.0" text="&lt;Fp&gt;" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.rowIndex="2">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                     </children>
                  </GridPane>
               </children>
        </AnchorPane>
      </items>
    </SplitPane>
      <HBox prefHeight="28.0" prefWidth="900.0" />
  </children>
</VBox>
